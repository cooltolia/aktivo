include template/header
include template/footer
include ../blocks/**/*
- const alias = "m"
- const theme = 'light'
doctype html
html(lang='ru')
    +doc-header
    body
        +main-header
        +account-layout
            +account-monitoring
                +e.header
                    +e.title Все фонды
                    +e.A.link.application-trigger(href='#') На продажу
                        +icon('l-arrow')
                +e.toggles
                    +e.toggle
                        +e.toggle-title Тип доходности
                        +e.toggle-inputs
                            +e.A.toggle-input.active(href='#')
                                span номинальная
                            +e.A.toggle-input(href='#')
                                span эффективная
                    +e.toggle
                        +e.toggle-title Показатели за
                        +e.toggle-inputs
                            +e.A.toggle-input(href='#')
                                span 12 месяцев
                            +e.A.toggle-input.active(href='#')
                                span все время
                    +e.toggle
                        +e.toggle-title Доходность за
                        +e.toggle-inputs
                            +e.A.toggle-input.active(href='#')
                                span период
                            +e.A.toggle-input(href='#')
                                span все время
                            +e.A.toggle-input(href='#')
                                span 12 месяцев
                    +e.toggle
                        +e.toggle-title Период
                        +e.toggle-inputs
                            +e.A.toggle-input.active(href='#')
                                span месяц
                            +e.A.toggle-input(href='#')
                                span квартал
                            +e.A.toggle-input(href='#')
                                span год
                +e.graph
                    +monitoring-graph
                +e.table
                    +monitoring-table
        +main-footer
            +lines
        +monitoring-sale-modal
        +doc-footer