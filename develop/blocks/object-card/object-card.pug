mixin object-card(data, hasReserve)
    +b.object-card
        +e.progress
            block
        +e.header
            +e.A.link(href='object-page.html')
            +e.image
                img(src='images/redesign/objects/object' + data.id + '.jpg', alt="")
                if (data.video)
                    +e.BUTTON.play(data-video-id='1-kG-vDVrkk')
            +e.top
                +e.name= data.name
                +e.address= data.address
            +e.bottom
                +e.rating= data.rating
                if (data.labels)
                    +e.labels
                        each label in data.labels
                            +e.label(class=label.modifier)= label.text
        +e.data
            +e.TABLE.table
                tr
                    td Стоимость объекта:
                    td
                        span.value= data.price
                tr
                    td Цена за кв. метр:
                    td
                        span.value 143 799.41 ₽ 
                tr
                    td Доходность в первый год:
                    td
                        span.value 10.4%
                            +e.BUTTON.tooltip.tooltip(data-tippy-content='Доходность растёт с каждым годом за счет ежегодной индексации на 5% и будет составлять 16.4% в 2027 году. Рассчитано при цене 411 млн руб.') ?
                tr
                    td Доходность за 10 лет:
                    td
                        span.value 12.8%
                            +e.BUTTON.tooltip.tooltip(data-tippy-content='Доходность растёт с каждым годом за счет ежегодной индексации на 5% и будет составлять 16.4% в 2027 году. Рассчитано при цене 411 млн руб.') ?
                tr
                    td Окупаемость:
                    td
                        +e.A.lock.tooltip(href='#' data-tippy-content='Информация доступна только для зарегистрированных пользователей. Нажмите, чтобы зарегистрироваться или авторизоваться')
                            +icon('lock')
                tr
                    td Мин. инвестиции:
                    td
                        span.value 353 694 ₽
                tr
                    td Стоимость пая:
                        small без комиссии
                    td
                        span.value 353 694 ₽
                if (!hasReserve)
                    tr
                        td(colspan='2')
                            span.value
                                b ЗПИФН "Активо четырнадцать"
                    tr
                        td Управляющая компания:
                        td
                            span.value КСП Капитал
                    tr
                        td Депозитарная компания:
                        td
                            img(src="images/redesign/infinitum.png", alt="")
        if (hasReserve)
            +e.FORM.reserve(data-price='300000')
                +e.reserve-inputs
                    +e.reserve-input
                        label(for='reserveShare1') Количество паев на бронь
                        input(type='number' id='reserveShare1' data-id='reserveShare' value='6' min='1' name='share')
                    +e.reserve-input
                        label(for='reserveSum1') Сумма бронирования
                        input(type='text' id='reserveSum1' data-id='reserveSum' disabled)
                +e.BUTTON.reserve-btn.btn.--small(type='button') Забронировать












