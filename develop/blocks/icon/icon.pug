mixin icon(name, type, blockName, modifier)
    -const mod = modifier || ''
    -const svgClass = blockName ? blockName + '__svg ' + mod : ''
    -const useClass = blockName ? blockName + '__use ' + mod : ''
    svg(class=svgClass)
        if (type === 'fill')
            use( class=useClass xlink:href="images/redesign/html-sprite-fill.svg#" + name)
        else
            use( class=useClass xlink:href="images/redesign/html-sprite.svg#" + name)